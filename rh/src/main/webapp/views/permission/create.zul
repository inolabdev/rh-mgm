<zk xmlns:x="xhtml" xmlns:zk="zk">
<window apply="org.zkoss.bind.BindComposer"
 viewModel="@id('vm')@init('mz.inolabdev.rh.viewModel.PermissionVM')">
	 <div zclass="col-md-10">
		<div zclass="box box-primary" validationMessages="@id('vmsgs')">
		    <div zclass="box-header">
		        <x:h3 class="box-title">Nova Pemissão</x:h3>
		    </div>
		    <div form="@id('fx') @load(vm.perm) @save(vm.perm, before='savePerm')">
		        <div zclass="box-body">
					<div class="form-group">
					    <x:label>Permissão *</x:label>
					    <textbox zclass="form-control" placeholder="Pemissão" value="@bind(fx.permissionname)" 
					    	constraint="no empty : Nao pode ser vazio nem conter apenas espaços em branco!" />
					</div>
		        </div>
		        <div zclass="box-footer">
		            <x:button type="submit" class="btn btn-primary btn-flat" onClick="@command('savePerm', action=0)">
		            	Gravar <x:i class="glyphicon glyphicon-floppy-disk"></x:i>
		            </x:button>
		        </div>
		    </div>
		</div>
	</div>
	<div sclass="col-md-2">
	  <div sclass="box box-solid menuAlign">
		<x:center>
		    <x:div class="box-header">
		        <x:span sclass="menuOperations" >Permissões</x:span>
		    </x:div>
		    <x:div sclass="box-body">
		    	<x:table>
			    <x:tr><x:td>
					<x:a class="btn btn-app" onClick="@command('permissionList')">
				        <x:i class="fa fa-list"></x:i>
				        Listar
				    </x:a>
			    </x:td></x:tr>
			    </x:table>
		    </x:div>
	    </x:center>
	  </div>
	</div>
</window>
</zk>